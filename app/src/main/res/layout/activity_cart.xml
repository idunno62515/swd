<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.CartActivity">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="3dp"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="120dp" >

            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/imgv_product"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop">

            </ImageView>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:lines="2"
                    android:textColor="@android:color/black"
                    android:id="@+id/txt_product_name"
                    android:text="Pizza"
                    android:textSize="21sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:id="@+id/txt_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20.000 đ"
                    android:textSize="18sp">

                </TextView>

            </LinearLayout>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:src="@drawable/edit"
                android:id="@+id/btnEditCart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:src="@drawable/recycling"
                android:id="@+id/btnDeleteCart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <Button
                android:layout_marginLeft="15dp"
                android:background="@drawable/radius_button_add_more_cart"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textColor="@color/cart_color"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Thêm món" />
            <TextView
                android:textStyle="bold"
                android:textSize="27dp"
                android:layout_marginLeft="85dp"
                android:layout_gravity="center"
                android:text="Total: 180000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_margin="9dp"
        android:layout_marginTop="35dp"
        android:textSize="21dp"
        android:textAllCaps="false"
        android:background="@color/button_color"
        android:text="Tiếp tục"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>