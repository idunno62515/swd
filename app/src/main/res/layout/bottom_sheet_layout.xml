<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/radius"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:background="@drawable/radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:background="@drawable/radius"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="10dp"
            android:src="@drawable/close"
            android:layout_width="21dp"
            android:layout_height="21dp"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgv_product"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:gravity="center"
            android:src="@mipmap/ic_launcher"></ImageView>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/txt_modal_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="18dp"></TextView>

            <TextView
                android:textStyle="bold"
                android:textColor="@color/colorPrice"
                android:id="@+id/txt_modal_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="20dp"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="72dp"
                    android:background="@drawable/minus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:text="1"
                    android:textSize="21dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/plus" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_margin="1dp"
        android:background="@drawable/note"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note" />

            <EditText
                android:layout_marginStart="5dp"
                android:textSize="18dp"
                android:background="@drawable/without_underline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/colorPrice"
                    android:id="@+id/txt_product_price_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30000"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_product_note_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="note..."
                    android:textSize="20dp" />

            </LinearLayout>

            <Button
                android:onClick="clickToCart"
                android:layout_marginLeft="165dp"
                android:background="@drawable/radius_button_add_cart"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@color/cart_color"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Thêm vào giỏ" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>